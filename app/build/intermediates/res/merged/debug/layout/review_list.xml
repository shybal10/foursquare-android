<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/background"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/date_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="user name"
        android:textStyle="bold"
        android:textSize="16.88sp"
        android:textColor="#1D1D26"
        android:id="@+id/name_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_id"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        tools:text="the review goes here"
        android:textSize="12.38sp"
        android:textColor="#9e9e9e"
        android:id="@+id/review_id"


        />

    <TextView
        android:textColor="#9e9e9e"
        android:id="@+id/date_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />
    <View
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@id/review_id"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>

