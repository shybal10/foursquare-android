<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.shybal.projectapp.AddReviewActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.AppBarLayout

        android:backgroundTint="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:onClick="returnToParent"
                android:id="@+id/back_button"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:background="@drawable/back_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:id="@+id/hotel_name"
                android:textSize="16.87dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:text="Add Review"/>
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Write Review"
            android:textSize="15.75sp"
            android:fontFamily="sans-serif"
            android:textColor="#351347"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/writeReview_textView" />

        <View
            android:layout_marginTop="12dp"
            android:layout_width="327dp"
            android:layout_marginLeft="16dp"
            android:layout_height="1dp"
            android:background="#9e9e9e" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:background="#9e9e9e"

                android:layout_width="1dp"
                android:layout_height="150dp">
            </View>

            <EditText
                android:id="@+id/review_editText"
                android:layout_width="310dp"
                android:layout_height="132dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:backgroundTint="@android:color/transparent"
                android:textSize="14.62dp"
                android:layout_marginLeft="8dp"
                android:textColor="#8d8d8d"
                android:paddingTop="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="8dp"
                android:gravity="top"/>

            <View
                android:background="#9e9e9e"
                android:layout_width="1dp"
                android:layout_height="150dp"/>


        </LinearLayout>



        <View
            android:layout_width="327dp"
            android:layout_marginLeft="16dp"
            android:layout_height="1dp"
            android:background="#9e9e9e"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add a photos to your review"
            android:textSize="15.75sp"
            android:fontFamily="sans-serif"
            android:textColor="#351347"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/photo_food3"
                android:visibility="gone"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/photo_food2"
                android:visibility="gone"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/photo_food1"
                android:visibility="gone"
                android:scaleType="centerCrop"
                />

            <Button
                android:id="@+id/photo_food_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/addphotoes"/>

        </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffff">

    </View>

    </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textAllCaps="false"
        android:background="#2a0545"
        android:textColor="#ffffff"/>

</RelativeLayout>

