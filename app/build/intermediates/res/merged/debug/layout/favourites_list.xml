<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="0dp"
        android:background="#e0e0e0" />

    <View
        android:layout_width="6dp"
        android:layout_height="113dp"
        android:layout_marginTop="6dp"
        android:background="#e0e0e0"/>

    <ImageView
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:id="@+id/image_view" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        tools:text="name"
        android:textSize="16.88sp"
        android:textColor="#1D1D26"
        android:id="@+id/name_view"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_view"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:textSize="11.25dp"
        android:ellipsize="end"
        tools:text="7.5"
        android:padding="2dp"
        android:id="@+id/rating_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_view"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        tools:text="Enter the cousine"
        android:textSize="12.38sp"
        android:textColor="#000000"
        android:id="@+id/deatils_view"
        android:maxLines="1"

        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/deatils_view"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        tools:text="Enter the adress"
        android:textSize="12.38sp"
        android:textColor="#000000"
        android:id="@+id/adress_view"
        android:maxLines="1"
        android:ellipsize="end" />

    <Button
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/close_icon_grey"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/close_button" />
    <View
        android:layout_alignParentRight="true"
        android:layout_width="6dp"
        android:layout_height="113dp"
        android:layout_marginTop="6dp"
        android:background="#e0e0e0"/>

    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/deatils_view"
        android:layout_alignParentRight="true"
        tools:text="Distance"
        android:textSize="12.38sp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"/>





</RelativeLayout>


