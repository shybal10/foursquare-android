<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shybal.projectapp.RatingActivity"
    android:background="@color/cardview_shadow_start_color"
    android:theme="@style/CustomActionBarRating">


    <LinearLayout
        android:id="@+id/rating_screen"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffffff">



        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Rating"
            android:textSize="19.12sp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/rating_textview_id"
            android:textStyle="bold"
            android:text="4.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="27.75sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="How would you rate your"
            android:textSize="22.95sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="experience?"
            android:textSize="22.95sp"/>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="30dp"
            app:srb_numberOfStars="5"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            app:srb_stepSize="0.1"
            app:srb_isIndicator="false"
            app:srb_borderColor="@color/golden_stars"
            app:srb_fillColor="@color/golden_stars"
            android:id="@+id/hotel_rating_bar" />




        <View
            android:layout_marginTop="68.5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"/>


        <Button
            android:gravity="center"
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/button_border"
            android:fontFamily="sans-serif"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#351347"
            android:textSize="16sp" />
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"/>


    </LinearLayout>



    <ImageButton
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:clickable="true"
        android:src="@drawable/close_icon_grey"
        android:layout_alignTop="@+id/rating_screen"
        android:layout_marginTop="-12dp"
        android:layout_marginRight="-10dp"
        android:layout_alignRight="@+id/rating_screen"
        android:layout_alignEnd="@+id/rating_screen" />
</RelativeLayout>

